<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Product</title>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css'>
    <link rel="stylesheet" href="/css/PopularProducts.css">

</head>

<body>
    <!-- partial:index.partial.html -->
    <section class="section-products">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-8 col-lg-6">
                    <div class="header">
                        <h3>Featured Product</h3>
                        <h2>Popular Products</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Single Product -->
                <%productList.forEach(Product=> {%>
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div id="product-1" class="single-product">
                       
                        <div class="part-1">
                            <img src="/uploads/images/<%= Product.image %>" width="100%" height="100%">
                            <ul>
                                <li><a href="#"><i class="fas fa-shopping-cart"></i></a></li>

                            </ul>
                        </div>
                        <div class="part-2">
                            <a class="product-title" href="/productDetail/<%= Product._id %>"> <b><%= Product.name %></b> </a><br>
                            <a href="" class="btn btn-primary btn-sm">Add to cart â‚ª<%= Product.price %></a>

                        </div>
                    </div>
                </div>
                <%})%>
            </div>
        </div>
        </div>
    </section>
    <!-- partial -->

</body>

</html>